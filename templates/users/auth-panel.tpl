<div class="well">
<form method="post" action="/users/auth" class="form">
  <div class="control-group">
    <label class="control-label" for="inputLogin">Логин:</label>
    <div class="controls">
      <input type="text" id="inputLogin" name="login" placeholder="e-mail" class="span2"/>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="inputPassword">Пароль:</label>
    <div class="controls">
      <input type="password" id="inputPassword" name="password" placeholder="пароль" class="span2" />
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <button type="submit" class="btn btn-primary">Войти</button>
    </div>
  </div>   
</form>
</div>